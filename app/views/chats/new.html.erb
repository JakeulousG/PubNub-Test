<div class="my-3">
    <%= link_to "<- Dashboard", root_path, class:'btn btn-info text-white' %>
</div>
<div class="card mt-5">
    <div class="card-header">
        +&nbsp;Create a new Chat!
    </div>
    <div class="card-body">
        <div class="row mx-5 px-5">
            <%= form_for(@chat) do |f| %>
                <div class="row mb-4">
                    <%= f.label :chat_title, class:'form-label' %>
                    <%= f.text_field :chat_title, class:'form-control'%>
                </div>
                <div class="row mb-4">
                    <%= f.label :chat_tag, class:'form-label' %>
                    <%= f.text_field :chat_tag, class:'form-control'%>
                </div>
                <%= f.hidden_field :user_id, value: current_user.id , class:'form-control'%>
                <div class="row mb-4">
                    <%= f.submit "Create New Chat", class:'btn btn-success'%>
                </div>
            <% end %>
        </div>
    </div>
</div>