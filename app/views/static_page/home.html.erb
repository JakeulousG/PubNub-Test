<% if user_signed_in? %>
    <% if current_user.account_types == "admin" %>
        <%= render "/static_page/admin_dashboard" %>
    <% elsif current_user.account_types == "support" %>
        <%= render "/static_page/support_dashboard" %>
    <% elsif current_user.account_types == "user" %>
        <%= render "/static_page/user_dashboard" %>
    <% end %>
<% else %>
    <div class='text-center bg-secondary text-white p-5'>
        <h2 class='mb-5'>Welcome to Sup<strike>Hub</strike></h2>
        <hr>
        <div class="d-flex justify-content-around mt-5">
            <%= link_to "Register Account",new_user_registration_path, class: 'btn btn-success' %>
            <%= link_to "Login Existing Account", new_user_session_path, class: 'btn btn-info text-white' %>
        </div>
    </div>
<% end %>